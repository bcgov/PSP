worker_processes  auto;

error_log  /var/log/nginx/error.log;
pid        /var/run/nginx.pid;

events {
    worker_connections  4096;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;
    server_tokens off;

    # logging rules
    geo $loggable {
        default 1;
        %RealIpFrom% 0;
    }

    # Use a w3c standard log format
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main if=$loggable;

    sendfile        on;
    keepalive_timeout  65;

    #real_ip module
    set_real_ip_from %RealIpFrom%;
    real_ip_recursive on;
    real_ip_header    X-Forwarded-For;

    server {
        listen       8080;
        server_name  localhost;
        underscores_in_headers on;
        ignore_invalid_headers off;

        # add in most common security headers
        add_header Content-Security-Policy "default-src 'self'; frame-ancestors 'self'; img-src 'self' data: blob: https://dev-motigeo.th.gov.bc.ca/ https://openmaps.gov.bc.ca/ https://maps.gov.bc.ca/ https://server.arcgisonline.com/; frame-src 'self' https://*.oidc.gov.bc.ca https://oidc.gov.bc.ca; connect-src 'self' https://dev-motigeo.th.gov.bc.ca/ https://*.oidc.gov.bc.ca/ https://oidc.gov.bc.ca https://openmaps.gov.bc.ca/ https://maps.gov.bc.ca/ https://server.arcgisonline.com/; form-action 'self'; style-src 'self' 'sha256-TJWtAQZhIjMP4+e4lQ8ZSVLt8o/wOfWY1ac6ZjvOwr8=' 'sha256-BeZ6EL8ajstckTUyE8k0bjY3v2P92XLxVp25GnrBG30=' 'sha256-47DEQpj8HBSa+/TImW+5JCeuQeRkm5NMpJWZG3hSuFU=';";
        add_header Strict-Transport-Security "max-age=86400; includeSubDomains";
        add_header X-Content-Type-Options "nosniff";
        add_header X-XSS-Protection 1;
        add_header X-Frame-Options DENY;

        # disable web caching as per ZAP Recommended Solution
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
        set $bearer_auth '';

        location /api {
            proxy_pass          %API_URL%;
        }

        location @handle_redirect {
            resolver 8.8.8.8;
            set $saved_redirect_location '$upstream_http_location';
            proxy_set_header Authorization $bearer_auth;
            proxy_pass $saved_redirect_location;
            
        }

        location /ogs-internal {
            set $bearer_auth $http_authorization;
            resolver 8.8.8.8;
            proxy_pass          %GEOSERVER_URL%;
            proxy_intercept_errors on;
            error_page 301 302 307 = @handle_redirect;
        }

        # serve our app here
        location / {
            root   /tmp/app/dist;
            index  index.html index.htm;
            try_files $uri /index.html;
            gzip_static  always;
            gzip_proxied expired no-cache no-store private auth;
            gunzip       on;

            sendfile off;
            expires -1;
        }

        # redirect server error pages to the static page /50x.html
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   /usr/share/nginx/html;
        }

        # For status of ngnix service, OpenShift is configured to call this
        location /nginx_status {
            # Enable Nginx stats
            stub_status on;

            # Only allow access from localhost
            allow all;

            # Other request should be denied
            # deny all;

            # No need to log this request, its just noise
            access_log off;
        }

    }
}
